<odoo>

    <record id="view_ligne_tree" model="ir.ui.view">
        <field name="name">ligne.tree</field>
        <field name="model">ligne</field>
        <field name="arch" type="xml">
            <tree>
                <field name="article_code" string="Article"/>
                <field name="paragraph_code" string="Paragraphe"/>
                <field name="code" string="Ligne Code"/>
                <field name="label" string="Label"/>
            </tree>
        </field>
    </record>

    <record id="ligne_action" model="ir.actions.act_window">
        <field name="name">Ligne</field>
        <field name="res_model">ligne</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="ligne_form_view" model="ir.ui.view">
        <field name="name">ligne.form</field>
        <field name="model">ligne</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="code"/>
                        <field name="label"/>
                        <field name="paragraph_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
