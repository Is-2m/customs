<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="view_ordonnateurs_form">
            <field name="name">or_ordonnateur_form</field>
            <field name="model">or.ordonnateur</field>
            <field name="arch" type="xml">
                <form string="Ordonnateurs">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="comptes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_ordonnateurs_tree">
            <field name="name">or_ordonnateur_tree</field>
            <field name="model">or.ordonnateur</field>
            <field name="arch" type="xml">
                <tree string="Ordonnateurs">
                    <field name="name"/>
                    <field name="comptes"/>
                </tree>
            </field>
        </record>
        <record id="ordonnateur_model_action" model="ir.actions.act_window">
            <field name="name">Gestion Ordonnateur</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">or.ordonnateur</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Cre√©r une nouvelle ligne de recette !
                </p>
            </field>
        </record>

        <menuitem id="ordonnateur_menu"
                  name="Ordonnateurs"
                  action="ordonnateur_model_action"
                  parent="options_menu"
                  sequence="2"/>
    </data>
</odoo>