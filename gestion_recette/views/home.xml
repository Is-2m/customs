<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_ordre_recette_tree" model="ir.ui.view">
        <field name="name">or.ordre.recette.tree</field>
        <field name="model">or.ordre.recette</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="ordonnateur_id"/>
                <field name="debiteur_id"/>
                <field name="nature"/>
                <field name="montant_chiffre"/>
                <field name="montant_lettre"/>
                <field name="type"/>
                <field name="convention"/>
                <field name="explication"/>
                <field name="facturation"/>
                <field name="marche"/>
                <field name="contrat"/>
                <field name="decision"/>
                <field name="ac_banque"/>

            </tree>
        </field>
    </record>
    <record id="test_model_action" model="ir.actions.act_window">
        <field name="name">Gestion Recette</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">or.ordre.recette</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="test_menu_root" name="Gestion Recette">
        <menuitem id="test_first_level_menu" name="Options">
            <menuitem id="test_model_menu_action" name="Order Recette" action="test_model_action"/>
        </menuitem>
    </menuitem>
</odoo>
