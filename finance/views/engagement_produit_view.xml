                <tree string="Produits">
                    <field name="produit_id" string="Designation"/>
                    <field name="quantity" string="Quantité"/>
                    <field name="product_uni_price" string="Prix Unitaire HT"/>
                    <field name="product_total_price" string="Total HT"/>
                </tree>
            </field>
        </record>

