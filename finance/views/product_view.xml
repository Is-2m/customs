    <record id="product_tree_view" model="ir.ui.view">
        <field name="name">finance_product_tree</field>
        <field name="model">finance.produit</field>
        <field name="arch" type="xml">
            <tree string="Produit">
                <field name="name"/>
                <field name="prix"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="product_form_view" model="ir.ui.view">
        <field name="name">finance_product_form</field>
        <field name="model">finance.produit</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="description"/>
                </group>
                <group>
                    <field name="prix"/>
                </group>
            </form>
        </field>
    </record>

    <record id="produit_act_window" model="ir.actions.act_window">
        <field name="name">Produit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">finance.produit</field>
        <field name="view_mode">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new ModelTitle.
            </p>
        </field>
    </record>
</odoo>