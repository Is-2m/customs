<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="service_form_view" model="ir.ui.view">
            <field name="name">finance_service_form</field>
            <field name="model">finance.service</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="prix"/>
                                <field name="fournisseur_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="service_tree_view" model="ir.ui.view">
            <field name="name">finance_service_tree</field>
            <field name="model">finance.service</field>
            <field name="arch" type="xml">
                <tree string="Services">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="prix"/>
                    <field name="fournisseur_id"/>
                </tree>
            </field>
        </record>

