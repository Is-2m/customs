<odoo>
    <!-- Tree view for engagements -->
    <record id="view_engagement_tree" model="ir.ui.view">
        <field name="name">engagement.tree</field>
        <field name="model">finance.engagement</field>
        <field name="arch" type="xml">
            <tree string="Engagements">
                <field name="montant"/>
                <field name="date_engagement"/>
                <field name="ligne_id"/>
            </tree>
        </field>
    </record>

    <!-- Form view for engagements -->
    <record id="view_engagement_form" model="ir.ui.view">
        <field name="name">engagement.form</field>
        <field name="model">finance.engagement</field>
        <field name="arch" type="xml">
            <form string="Engagement">
                <sheet>
                    <group>
                        <field name="montant"/>
                        <field name="date_engagement"/>
                        <field name="ligne_id"/>

                    </group>
                </sheet>
                <sheet>
                    <notebook>
                        <page string="Produits">
                            <field name="engagement_produit_ids" mode="tree">
                                <tree>
                                    <field name="produit_id"/>
                                    <field name="quantity" string="QuantitÃ©"/>
                                    <field name="product_uni_price" string="Prix Unitaire HT"/>
                                    <field name="product_total_price" string="Total HT"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Services">
                            <field name="service_ids" mode="tree">
                                <tree>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="prix"/>
                                    <field name="fournisseur_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for engagements -->
    <record id="action_engagement" model="ir.actions.act_window">
        <field name="name">Engagements</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">finance.engagement</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu item for engagements -->
    <!--        <menuitem id="menu_engagement" name="Engagements"/>-->
    <!--        <menuitem id="menu_engagement_tree" parent="menu_engagement" name="Engagements" action="action_engagement"/>-->
</odoo>
